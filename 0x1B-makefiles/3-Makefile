CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
RM = rm -f

all : $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

main.o : main.c m.h

holberton.o : holberton.c m.h

clean :
	$(RM) *~ $(NAME)
	$(RM) *.ext.swp *.ext~

oclean :
	$(RM) $(OBJ)

fclean :
	$(RM) *~ $(NAME)
	$(RM) $(OBJ)

re :
	$(RM) $(OBJ)
	make -f 3-Makefile --no-print-directory
